{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register/transpile-only"
            ],
            "args": ["src/index.ts"],
            "cwd": "${workspaceRoot}",
            "skipFiles": ["<node_internals>/**", "node_modules/**"],
            "console": "integratedTerminal"
        }
    ]
}
